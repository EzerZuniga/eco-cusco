      "cwd": "${workspaceFolder}",
      "mainClass": "com.cusco.limpio.CuscoLimpioApiApplication",
      "projectName": "cusco-limpio-api",
      "args": "",
      "env": {
        "SPRING_PROFILES_ACTIVE": "postgres",
        "SPRING_DATASOURCE_PASSWORD": "zuniga2026"
      },
      "console": "internalConsole"
    },
    {
      "type": "java",
      "name": "Spring Boot Tests",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "mainClass": "com.cusco.limpio.CuscoLimpioApiApplicationTests",
